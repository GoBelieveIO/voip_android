<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <io.gobelieve.voip_demo.RTCRenderView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/render"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.beetle.face.activity.VOIPVideoActivity">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/header"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar_contact"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/header"
                android:layout_marginTop="30dp"
                android:text="00:00"
                android:id="@+id/duration"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/call_answer_x"
                        android:id="@+id/accept"
                        android:layout_centerInParent="true"
                        android:onClick="accept"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/call_hangup_x"
                        android:id="@+id/refuse"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="refuse" />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="挂断"
                android:id="@+id/hang_up"
                android:onClick="hangup"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:textSize="30sp" />

        </RelativeLayout>


    </LinearLayout>
</FrameLayout>