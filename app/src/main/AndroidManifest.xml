<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.gobelieve.voip_demo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />



    <application
        android:name="io.gobelieve.voip_demo.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

<!--        <meta-data-->
<!--            android:name="binaryGraphName"-->
<!--            android:value="face_detection_mobile_gpu.binarypb" />-->



        <meta-data
            android:name="binaryGraphName"
            android:value="face_effect_gpu.binarypb" />

        <meta-data
            android:name="inputVideoStreamName"
            android:value="input_video" />

        <meta-data
            android:name="outputVideoStreamName"
            android:value="output_video" />

        <meta-data
            android:name="flipFramesVertically"
            android:value="True" />

        <meta-data
            android:name="converterNumBuffers"
            android:value="2" />

        <meta-data android:name="cameraFacingFront" android:value="True"/>

        <activity
            android:name="io.gobelieve.voip_demo.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.beetle.voip.VOIPVoiceActivity"
            android:screenOrientation="portrait"
            android:label="voip" >
        </activity>

        <activity
            android:name="com.beetle.voip.VOIPVideoActivity"
            android:screenOrientation="portrait"
            android:label="voip" >
        </activity>


        <activity android:name="com.beetle.voip.MediaPipeActivity"></activity>

    </application>

</manifest>
